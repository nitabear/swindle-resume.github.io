<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Resume - {{#resume.basics}}{{name}}{{/resume.basics}}</title>
    <!-- Bootstrap -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Noto+Sans|Noto+Serif" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        body { font-family: 'Noto Sans', sans-serif; }
        h1, h2, h3, h4, h5, h6 { font-family: 'Noto Serif', serif; }
        .container-fluid { border: solid #d22042; border-width: 2px 0 0 0; }
        .custom-top-margin { margin-top: 20px; }
        .custom-row-margin { margin-top: 10px; }
    </style>
  </head>
  <body>

    <div class="container-fluid">

        {{#resume.basics}}
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-8">
                    {{#name}}
                        <h1 class="text-uppercase"> {{.}} </h1>
                    {{/name}}
                    {{#label}}
                        <h4> {{.}} </h4>
                    {{/label}}
                </div> <!-- /col -->
                <div class="col-xs-6 col-md-4 small custom-top-margin">
                {{#phone}}
                    <strong>Phone:</strong> {{.}} <br />
                {{/phone}}
                {{#email}}
                    <strong>Email:</strong> {{.}} <br />
                {{/email}}
                {{#profiles}}
                    {{#network}}
                        <strong> {{.}}: </strong>
                    {{/network}}
                    {{#if username}}
                        {{#if url}}
                            <a href="{{url}}">{{username}}</a> <br />
                        {{else}}
                            {{username}}
                        {{/if}}
                    {{else}}
                        {{#if url}}
                            <a href="{{url}}">{{url}}</a>
                        {{/if}}
                    {{/if}}
                {{/profiles}}
                </div> <!-- /col -->
            </div> <!-- /row -->
            <hr />
        </div> <!-- /container -->
        {{/resume.basics}}

        {{#if resume.skills}}
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-md-3">
                    <h3><i>Skills</i></h3>
                </div>
                <div class="col-xs-12 col-md-9 custom-row-margin">
                    <div class="row">
                        {{#each resume.skills}}
                        <div class="col-sm-6">
                            <div>
                                <h4>{{name}}</h4>
                            </div>
                            {{#if keywords.length}}
                            <ul>
                                {{#keywords}}
                                <li> {{.}} </li>
                                {{/keywords}}
                            </ul>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div> <!-- /col -->
                </div> <!-- /col -->
            </div> <!-- /row -->
            <hr />
        </div> <!-- /container -->
        {{/if}}

        {{#if resume.education}}
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-md-3">
                    <h3><i>Education</i></h3>
                </div>
                <div class="col-xs-12 col-md-9 custom-top-margin">
                {{#each resume.education}}
                <div>
                    <h4>
                        <span>{{institution}}</span>
                        <span class="pull-right">
                            {{startDate}} - {{endDate}}
                        </span>
                    </h4>
                <div> {{studyType}} in {{area}}</div>
            </div>
            {{/each}}
                </div> <!-- /col -->
            </div> <!-- /row -->
            <hr />
        </div> <!-- /container -->
        {{/if}}

        {{#if resume.work}}
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-md-3">
                    <h3><i>Work</i></h3>
                </div> <!-- /col -->
                <div class="col-xs-12 col-md-9 custom-row-margin">
                    {{#each resume.work}}
                    <div>
                        <h4>
                            <a target="_blank" href="{{website}}"> {{company}} </a>
                            <span class="pull-right"> {{startDate}} - {{endDate}} </span>
                        </h4>
                        <p />
                        <div>
                            <i>{{position}}</i>
                        </div>
                        <p />
                        <div>
                            {{summary}}
                        </div>
                        {{#if highlights.length}}
                        <h4>Highlights</h4>
                        <ul>
                            {{#highlights}}
                            <li>{{.}}</li>
                            {{/highlights}}
                        </ul>
                        {{/if}}
                    </div>
                    <br />
                    {{/each}}
                </div> <!-- /col -->
            </div> <!-- /row -->
            <hr />
        </div> <!-- /container -->
        {{/if}}

        {{#if resume.work}}
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-md-3">
                    <h3><i>References</i></h3>
                </div> <!-- /col -->
                <div class="col-xs-12 col-md-9 custom-row-margin">
                    {{#each resume.references}}
                    <div>
                        {{#if reference}}
                        <blockquote>
                            {{reference}}
                        {{/if}}
                        {{#if name}}
                        <p />
                        <footer>
                        <cite title="{{name}}"> {{name}}</cite>
                        </footer>
                        {{/if}}
                        </blockquote>
                    </div>
                    {{/each}}
                            </div> <!-- /col -->
                        </div> <!-- /row -->
                        <hr />
                    </div> <!-- /container -->
                    {{/if}}

        {{#resume.basics}}
        <div class="container text-center small">
            <footer>
                {{name}} :: {{phone}} :: {{email}}
            </footer>
            <hr />
        </div> <!-- /container -->
        {{/resume.basics}}

    </div> <!-- /container-fluid -->

  </body>
</html>
